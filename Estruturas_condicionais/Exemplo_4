<?php
/*Exemplo de um programa que mostre a media do aluno e a situação dele:
0 a 5 reprovado
5 a 7 recuperação
7 a 10 aprovado

*/

$nota1 = 6;
$nota2 = 4;
$media = ($nota1 + $nota2) / 2;
if ($media >= 0 and $media <5) {
  $situacao = "Reprovado";
}
if ($media >= 5 and $media < 7) {
  $situacao = "Recuperação";
}
if ($media >= 7 and $media <= 10) {
  $situacao = "Aprovado";
} 

echo "Média: $media \n";
echo "Situação: $situacao;"
?>
